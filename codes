#Find the maximum number of any of three variable
start
input num1,num2,num3
if num1>num2 and num1>num3
print num1,"largest"
else num2>num1 and num2>num3
print num2,"largest"
else num3>num2 and num3>num1
print num3,"largest"
else num1=num2=num3
print"all of them are equal"

